{
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/desktop-lite:1": {},
    "ghcr.io/devcontainers/features/python": {},
    "ghcr.io/wxw-matt/devcontainer-features/apt:latest": {
			"packages": "curl build-essential zsh"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {},
  },
  "customizations": {
    "vscode": {
        "settings": {
            "terminal.integrated.defaultProfile.linux": "zsh",
            "terminal.integrated.profiles.linux": { "zsh": { "path": "/bin/zsh" } },
            "workbench.colorTheme": "GitHub Dark Default",
            "editor.fontFamily": "'Roboto Mono', 'Courier New', monospace"
        }
    }
  },
  "postCreateCommand":  "mkdir /home/vscode/.local /home/vscode/.local/bin && cp -r ./bin/* /home/vscode/.local/bin/"
}
